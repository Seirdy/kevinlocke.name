source 'https://rubygems.org'

# Can't upgrade to jekyll 3.8.0 or later until
# https://github.com/jekyll/jekyll/pull/6945 is merged
gem 'jekyll', '~> 3.7.0'
gem 'pygments.rb'

group :jekyll_plugins do
  gem 'jekyll-last-modified-at'
  # https://github.com/jekyll/jekyll-sitemap/pull/183
  gem 'jekyll-sitemap', :git => 'https://github.com/kevinoid/jekyll-sitemap.git', :branch => 'per_page_tags'
end
